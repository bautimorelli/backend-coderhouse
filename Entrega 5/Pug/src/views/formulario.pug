doctype html
html(lang='en')
head
    meta(charset='UTF-8')
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Pug
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    link(rel="stylesheet", href="index.css")
body
    nav(class="navbar navbar-expand-lg bg-light")
        div(class="container-fluid")
            ul(class="navbar-nav")
                li(class="nav-item")
                    a(class="nav-link" href="/") Crear Producto
                li(class="nav-item")
                    a(class="nav-link" href="/productos") Ver Productos
    |
    div(class="m-4") 
        p(class="h1") Ingrese un producto
        div(class="formContainer")
            form(action="/productos" method="POST" class="form m-4")
                div(class="mb-3")
                    label(for="inputName" class="form-label") Nombre
                    input(type="text" name="name" class="form-control" id="inputName")
                div(class="mb-3")
                    label(for="inputPrice" class="form-label") Precio
                    input(type="number" name="price" class="form-control" id="inputPrice")
                div(class="mb-3")
                    label(for="inputThumbnail" class="form-label") Thumbnail
                    input(type="url" name="thumbnail" class="form-control" id="inputThumbnail" placeholder="https://www.iconfinder.com/free_icons")
                button(type="submit" class="btn btn-primary") Submit
    |
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")