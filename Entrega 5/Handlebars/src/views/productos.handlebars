<div class="m-4">
    <p class="h1">Vista de Productos</p>
    {{#unless products}}
    <div class="alert alert-warning m-4" role="alert">
        <h4 class="alert-heading">No se encontraron productos</h4>
    </div>
    {{/unless}}
    {{#if products}}
    <div class="m-4">
        <table class="table">
            <thead>
                <tr class="table-primary">
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Foto</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row" class="align-middle">{{this.name}}</th>
                    <td class="align-middle">{{this.price}}</td>
                    <td class="align-middle"><img src={{this.thumbnail}} class="thumbnail"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    {{/if}}
</div>
